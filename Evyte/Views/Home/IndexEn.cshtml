@{
    Layout = "~/Views/Shared/_WebsiteLayout.cshtml";
}

<style>
    .hero-section {
        height: 100vh;
        position: relative;
    }

    .hero-slider .swiper-slide {
        position: relative;
        height: 100vh;
    }

    .section {
        padding: 5rem 0;
    }

    .bg-overlay {
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5));
    }

    .about-bg {
        background: url('images/website/about.jpg') no-repeat center center;
        background-size: cover;
        position: relative;
    }

    .features-bg {
        background: url('images/website/cover1.jpg') no-repeat center center;
        background-size: cover;
        position: relative;
    }

    .cta-bg {
        background: url('images/website/cover2.jpg') no-repeat center center;
        background-size: cover;
        position: relative;
    }

    .contact-bg {
        background: url('images/website/cover3.jpg') no-repeat center center;
        background-size: cover;
        position: relative;
    }

    .feature-card, .testimonial-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .feature-card:hover, .testimonial-card:hover {
            transform: translateY(-10px);
        }

    .btn-primary {
        background: #8b5cf6;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 9999px;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background: #7c3aed;
        }
</style>

