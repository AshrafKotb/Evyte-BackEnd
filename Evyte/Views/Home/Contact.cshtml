@{
    ViewData["Title"] = "Contact";
    Layout = "_WebsiteLayout";
}
<!-- start wpo-page-title -->
<section class="wpo-page-title">
    <div class="container">
        <div class="row">
            <div class="col col-xs-12">
                <div class="wpo-breadcumb-wrap">
                    <h2>Contact Us</h2>
                    <ol class="wpo-breadcumb-wrap">
                        <li><a href="index.html">Home</a></li>
                        <li>Contact</li>
                    </ol>
                </div>
            </div>
        </div> <!-- end row -->
    </div> <!-- end container -->
</section>
<!-- end page-title -->
<!-- start wpo-contact-pg-section -->
<section class="wpo-contact-pg-section section-padding" style="padding-bottom: 50px !important;">
    <div class="container">
        <div class="row">
            <div class="col col-lg-10 offset-lg-1">
                <div class="office-info">
                    <div class="row">
                        <div class="col col-xl-4 col-lg-6 col-md-6 col-12">
                            <div class="office-info-item">
                                <div class="office-info-icon">
                                    <div class="icon">
                                        <i class="fi flaticon-maps-and-flags"></i>
                                    </div>
                                </div>
                                <div class="office-info-text">
                                    <h2>Address</h2>
                                    <p>85 “Mecca Tower”, Faisal Street - next to Damietta Furniture Mall - Mariouteya Giza, Egypt 12555</p>
                                </div>
                            </div>
                        </div>
                        <div class="col col-xl-4 col-lg-6 col-md-6 col-12">
                            <div class="office-info-item">
                                <div class="office-info-icon">
                                    <div class="icon">
                                        <i class="fi flaticon-email"></i>
                                    </div>
                                </div>
                                <div class="office-info-text">
                                    <h2>Email Us</h2>
                                    <p>Info@Eventa.com</p>
                                    <p>Support@Eventa.com</p>
                                </div>
                            </div>
                        </div>
                        <div class="col col-xl-4 col-lg-6 col-md-6 col-12">
                            <div class="office-info-item">
                                <div class="office-info-icon">
                                    <div class="icon">
                                        <i class="fi flaticon-phone-call"></i>
                                    </div>
                                </div>
                                <div class="office-info-text">
                                    <h2>Call Now</h2>
                                    <p>+201063486972</p>
                                    <p>+201094469667</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="wpo-contact-title">
                    <h2>Need help? We're always here!</h2>
                    <p>
                        If you have any questions, suggestions, or need help designing your invitation, send us a message and our team will respond to you as soon as possible .
                    </p>
                </div>
                <div class="wpo-contact-form-area">
                    <form method="post" class="contact-validation-active" id="contact-form-main">
                        <div>
                            <input type="text" class="form-control" name="name" id="name"
                                   placeholder="Your Name*">
                        </div>
                        <div>
                            <input type="email" class="form-control" name="email" id="email"
                                   placeholder="Your Email*">
                        </div>
                        <div>
                            <input type="tel" class="form-control" name="Phone" id="Phone"
                                   placeholder="Phone Number">
                        </div>
                        <div>
                            <select name="service" class="form-control">
                                <option disabled="disabled" selected="">Event Type</option>
                            </select>
                        </div>
                        <div class="fullwidth">
                            <textarea class="form-control" name="note" id="note"
                                      placeholder="Message..."></textarea>
                        </div>
                        <div class="submit-area">
                            <button type="submit" class="theme-btn-s4">Get in Touch</button>
                            <div id="loader">
                                <i class="ti-reload"></i>
                            </div>
                        </div>
                        <div class="clearfix error-handling-messages">
                            <div id="success">Thank you</div>
                            <div id="error"> Error occurred while sending email. Please try again later. </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- end container -->
</section>
<!-- end wpo-contact-pg-section -->
<!-- start wpo-about-section -->
<section class="wpo-about-section section-padding " style="padding-bottom: 50px !important;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-10 col-12">
                <div class="wpo-section-title">
                    <h2>
                        Got a complaint?
                    </h2>
                </div>
            </div>
        </div>
        <div class="wpo-about-wrap">
            <div class="row align-items-center">
                <div class="col-xl-11 offset-xl-1 col-lg-12 col-md-12 col-12">
                    <div class="wpo-about-text wow fadeInLeftSlow" style="max-width: 100% !important;" data-wow-duration="1000ms">
                        <p>
                            If you encounter any issues with payment, design, or receiving your invitation, we're here to resolve them immediately.
                            Send us the details at: 📩 complaints@evyte.com -- or contact us directly on WhatsApp.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end container -->
</section>
<!-- end Service-section -->
<!-- start wpo-about-section -->
<section class="wpo-about-section " style="padding-bottom: 50px !important;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-10 col-12">
                <div class="wpo-section-title">
                    <h2>
                        Interested in collaborating with us?
                    </h2>
                </div>
            </div>
        </div>
        <div class="wpo-about-wrap">
            <div class="row align-items-center">
                <div class="col-xl-11 offset-xl-1 col-lg-12 col-md-12 col-12">
                    <div class="wpo-about-text wow fadeInLeftSlow" style="max-width: 100% !important;" data-wow-duration="1000ms">
                        <p>
                            If you're a designer, blogger, influencer, or even a wedding planner, we'd love to hear from you and collaborate!
                            Email us at:
                            📩 partners@evyte.com
                            Or send us a message using the form and indicate your interest in collaborating.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end container -->
</section>
<!-- end Service-section -->
