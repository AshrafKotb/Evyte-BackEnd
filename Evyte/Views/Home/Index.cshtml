@model Evyte.ApplicationCore.Models.ViewModels.HomeIndexViewModel
@{
    Layout = "~/Views/Shared/_WebsiteLayout.cshtml";
}

<style>
    .hero-section {
        height: 100vh;
        position: relative;
        direction: rtl;
    }

    .hero-slider .swiper-slide {
        position: relative;
        height: 100vh;
    }

    .section {
        padding: 5rem 0;
    }

    .bg-overlay {
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5));
    }

    .about-bg {
        background: url('images/website/about.jpg') no-repeat center center;
        background-size: cover;
        position: relative;
    }

    .features-bg {
        background: url('images/website/cover1.jpg') no-repeat center center;
        background-size: cover;
        position: relative;
    }

    .cta-bg {
        background: url('images/website/cover2.jpg') no-repeat center center;
        background-size: cover;
        position: relative;
    }

    .contact-bg {
        background: url('images/website/cover3.jpg') no-repeat center center;
        background-size: cover;
        position: relative;
    }

    .designs-bg {
        background: url('images/website/cover4.jpg') no-repeat center center;
        background-size: cover;
        position: relative;
    }

    .feature-card, .testimonial-card, .design-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
    }

        .feature-card:hover, .testimonial-card:hover, .design-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

    .btn-primary {
        background: #8b5cf6;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 9999px;
        transition: background 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background: #7c3aed;
            transform: scale(1.05);
        }

    .btn-preview {
        background: transparent;
        color: #8b5cf6;
        padding: 0.5rem;
        border-radius: 50%;
        transition: background 0.3s ease, color 0.3s ease, transform 0.2s ease;
    }

        .btn-preview:hover {
            background: #8b5cf6;
            color: white;
            transform: scale(1.1);
        }

    .design-card img {
        width: 100%;
        height: 220px;
        object-fit: cover;
        border-radius: 15px 15px 0 0;
        transition: transform 0.3s ease;
    }

    .design-card:hover img {
        transform: scale(1.05);
    }

    .design-card-content {
        padding: 1.5rem;
        position: relative;
    }

    .design-card h3 {
        color: #1f2937;
        margin-bottom: 0.5rem;
    }

    .design-card p {
        color: #6b7280;
        font-size: 0.9rem;
        line-height: 1.5;
        margin-bottom: 1rem;
    }

    .design-card .btn-preview {
        position: absolute;
        top: 1rem;
        left: 1rem;
        font-size: 1.25rem;
    }
</style>

<!-- قسم الهيرو مع السلايدر -->
<section class="hero-section relative" dir="rtl">
    <div class="swiper hero-slider">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <img src="~/images/website/cover8.jpg" alt="مشهد زفاف على الشاطئ" class="w-full h-full object-cover">
                <div class="absolute inset-0 bg-overlay flex items-center justify-center">
                    <div class="text-center text-white">
                        <h1 class="text-4xl md:text-6xl font-bold mb-4 animate-bounceIn">إيفايت - زفاف أحلامك</h1>
                        <p class="text-lg md:text-xl mb-6">أنشئ موقع زفاف مذهل في دقائق</p>
                        <a href="#Designs" class="btn btn-primary animate-pulse">ابدأ الآن</a>
                    </div>
                </div>
            </div>
            <div class="swiper-slide">
                <img src="~/images/website/cover1.jpg" alt="مكان أنيق" class="w-full h-full object-cover">
                <div class="absolute inset-0 bg-overlay flex items-center justify-center">
                    <div class="text-center text-white">
                        <h1 class="text-4xl md:text-6xl font-bold mb-4 animate-bounceIn">يوم لا يُنسى</h1>
                        <p class="text-lg md:text-xl mb-6">صمم موقعًا يروي قصة حبك</p>
                        <a href="#Designs" class="btn btn-primary animate-pulse">ابدأ الآن</a>
                    </div>
                </div>
            </div>
            <div class="swiper-slide">
                <img src="~/images/website/cover2.jpg" alt="حفل غروب الشمس" class="w-full h-full object-cover">
                <div class="absolute inset-0 bg-overlay flex items-center justify-center">
                    <div class="text-center text-white">
                        <h1 class="text-4xl md:text-6xl font-bold mb-4 animate-bounceIn">الحب في أوجه</h1>
                        <p class="text-lg md:text-xl mb-6">صمم دعوة زفافك المثالية اليوم</p>
                        <a href="#Designs" class="btn btn-primary animate-pulse">ابدأ الإنشاء</a>
                    </div>
                </div>
            </div>
            <div class="swiper-slide">
                <img src="~/images/website/cover4.jpg" alt="زوجان رومانسيان" class="w-full h-full object-cover">
                <div class="absolute inset-0 bg-overlay flex items-center justify-center">
                    <div class="text-center text-white">
                        <h1 class="text-4xl md:text-6xl font-bold mb-4 animate-bounceIn">الأبد يبدأ هنا</h1>
                        <p class="text-lg md:text-xl mb-6">شارك يومك المميز بأناقة</p>
                        <a href="#Designs" class="btn btn-primary animate-pulse">أنشئ دعوتك</a>
                    </div>
                </div>
            </div>
            <div class="swiper-slide">
                <img src="~/images/website/cover5.jpg" alt="ديكور زهور" class="w-full h-full object-cover">
                <div class="absolute inset-0 bg-overlay flex items-center justify-center">
                    <div class="text-center text-white">
                        <h1 class="text-4xl md:text-6xl font-bold mb-4 animate-bounceIn">حبك، بطريقتك</h1>
                        <p class="text-lg md:text-xl mb-6">خصص كل التفاصيل مع إيفايت</p>
                        <a href="#Designs" class="btn btn-primary animate-pulse">ابدأ الآن</a>
                    </div>
                </div>
            </div>
            <div class="swiper-slide">
                <img src="~/images/website/cover6.jpg" alt="مشهد زفاف على الشاطئ 2" class="w-full h-full object-cover">
                <div class="absolute inset-0 bg-overlay flex items-center justify-center">
                    <div class="text-center text-white">
                        <h1 class="text-4xl md:text-6xl font-bold mb-4 animate-bounceIn">احتفل بحبك</h1>
                        <p class="text-lg md:text-xl mb-6">دعوات مخصصة تروي قصتك</p>
                        <a href="#Designs" class="btn btn-primary animate-pulse">ابدأ الآن</a>
                    </div>
                </div>
            </div>
            <div class="swiper-slide">
                <img src="~/images/website/cover7.jpg" alt="مشهد زفاف غروب الشمس" class="w-full h-full object-cover">
                <div class="absolute inset-0 bg-overlay flex items-center justify-center">
                    <div class="text-center text-white">
                        <h1 class="text-4xl md:text-6xl font-bold mb-4 animate-bounceIn">لحظات لا تُنسى</h1>
                        <p class="text-lg md:text-xl mb-6">شارك يومك المميز بأناقة</p>
                        <a href="#Designs" class="btn btn-primary animate-pulse">أنشئ دعوتك</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>
</section>

<!-- عن إيفايت -->
<section class="section about-bg" data-aos="fade-up" dir="rtl">
    <div class="absolute inset-0 bg-overlay"></div>
    <div class="container text-center relative z-10">
        <h2 class="text-3xl font-bold text-white">عن إيفايت</h2>
        <p class="text-gray-200 mx-auto max-w-2xl mt-4">
            إيفايت هي المنصة المثالية لتصميم مواقع زفاف مخصصة تعكس قصة حبك الفريدة. مع أدوات سهلة الاستخدام وتصاميم أنيقة، نجعل إنشاء موقع يحبه ضيوفك أمرًا سهلاً.
        </p>
        <a href="#Designs" class="btn btn-primary mt-6 animate-pulse">ابدأ الإنشاء</a>
    </div>
</section>

<!-- التصميمات -->
<section Id="Designs" class="section designs-bg" data-aos="zoom-in" dir="rtl">
    <div class="absolute inset-0 bg-overlay"></div>
    <div class="container relative z-10">
        <h2 class="text-3xl font-bold text-center text-white">تصفح تصميماتنا</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-8">
            @foreach (var design in Model.Designs)
            {
                <div class="design-card text-center" data-aos="flip-up" data-aos-delay="100">
                    @* <img src="@design.PreviewImageUrl" alt="@design.NameAr" class="mb-0"> *@
                    <img src="~/Images/Website/photo5.jpg" alt="@design.NameAr" class="mb-0">
                    <div class="design-card-content">
                        @if (!string.IsNullOrEmpty(design.WebsiteDemoUrl))
                        {
                            <a href="@design.WebsiteDemoUrl" target="_blank" class="btn btn-preview" title="معاينة التصميم">
                                <i class="fas fa-eye"></i>
                            </a>
                        }
                        <h3 class="text-xl font-semibold">@design.NameAr</h3>
                        <p class="text-gray-600">@design.DescriptionAr</p>
                        <a href="/Invitations/Create?designId=@design.Id" class="btn btn-primary">اختر هذا التصميم</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- المميزات -->
<section class="section features-bg" data-aos="zoom-in" dir="rtl">
    <div class="absolute inset-0 bg-overlay"></div>
    <div class="container relative z-10">
        <h2 class="text-3xl font-bold text-center text-white">لماذا تختار إيفايت؟</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-8">
            <div class="feature-card text-center p-6" data-aos="flip-up" data-aos-delay="100">
                <i class="fas fa-paint-brush text-purple-600 text-4xl mb-4"></i>
                <h3 class="text-xl font-semibold">تخصيص سهل</h3>
                <p class="text-gray-600 mt-2">صمم موقعك بأدوات السحب والإفلات وقوالب مذهلة</p>
            </div>
            <div class="feature-card text-center p-6" data-aos="flip-up" data-aos-delay="200">
                <i class="fas fa-mobile-alt text-purple-600 text-4xl mb-4"></i>
                <h3 class="text-xl font-semibold">متوافق مع الهواتف</h3>
                <p class="text-gray-600 mt-2">يبدو موقعك مثاليًا على أي جهاز، من الهواتف إلى الحواسيب</p>
            </div>
            <div class="feature-card text-center p-6" data-aos="flip-up" data-aos-delay="300">
                <i class="fas fa-share-alt text-purple-600 text-4xl mb-4"></i>
                <h3 class="text-xl font-semibold">تكامل اجتماعي</h3>
                <p class="text-gray-600 mt-2">شارك قصة حبك مع ميزات تفاعلية ووسائل التواصل الاجتماعي</p>
            </div>
        </div>
    </div>
</section>

<!-- آراء العملاء -->
