<style>
    /* Add to your style.css */
    .wpo-demo-grids .grid {
        margin-bottom: 30px;
        text-align: center;
    }

    .wpo-demo-grids .inner {
        position: relative;
        overflow: hidden;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .preview-link {
        display: block;
        position: relative;
    }

    .preview-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(139, 92, 246, 16%);
        /* display: flex; */
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: all 0.3s ease;
    }

    .preview-link:hover .preview-overlay {
        opacity: 1;
    }

    .preview-overlay span {
        color: white;
        font-weight: bold;
        font-size: 1.2rem;
    }



    .theme-btn-s2 {
        background: #8b5cf6;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 30px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .theme-btn-s2:hover {
            background: #7c3aed;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

    .theme-btn-s2 {
        display: inline-block;
        padding: 12px 30px;
        background: #e7a9a1;
        color: #fff;
        border-radius: 30px;
        text-transform: uppercase;
        font-weight: 600;
        transition: all 0.3s;
        border: none;
    }

        .theme-btn-s2:hover {
            background: #d48c82;
            color: #fff;
            transform: translateY(-3px);
        }
</style>
