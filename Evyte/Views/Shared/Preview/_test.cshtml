@model Request
@{
    Layout = null;
    var culture = new System.Globalization.CultureInfo("ar-SA");
    culture.DateTimeFormat.Calendar = new System.Globalization.GregorianCalendar();
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="دعوة زفاف @Model.RequestData.BrideName و @Model.RequestData.GroomName" />
    <title>زفاف @Model.RequestData.BrideName و @Model.RequestData.GroomName</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- GSAP CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <!-- ScrollTrigger for GSAP -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>
    <!-- Keen Slider CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/keen-slider@6.8.4/keen-slider.min.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Amiri:wght@400;700&family=Great+Vibes&display=swap" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/templates/test/css/styles.css" />
</head>
@await Html.PartialAsync("_FloatingButton", Model.Design.Id.ToString())
<body class="bg-gradient-to-b from-pink-100 to-white">
    <!-- Decorative Elements -->
    <div class="decorative-elements"></div>

    <!-- Loading Screen -->
    <div id="loading" class="fixed inset-0 bg-gray-900 flex flex-col justify-center items-center z-50">
        <h1 class="text-3xl sm:text-4xl text-white font-bold animate-pulse">جاري التحميل...</h1>
        <div class="loader w-12 h-12 sm:w-16 sm:h-16 border-4 border-t-transparent border-white rounded-full animate-spin"></div>
    </div>

    <!-- Welcome Bar -->
    <div id="welcome-bar" class="fixed top-0 left-0 w-full bg-gradient-to-r from-yellow-400 to-pink-500 text-white text-center py-4 z-50 ">
        <p class="text-lg font-amiri">نفرح بيكم في زفاف @Model.RequestData.BrideName - @Model.RequestData.GroomName! ❤️  <br />@Model.RequestData.EventDate.ToString("dd MMMM yyyy", culture)</p>
        <button id="close-bar" class="absolute top-2 right-2 p-2 bg-white text-pink-500 rounded-full hover:bg-pink-100 transition"><i class="fas fa-times"></i></button>
    </div>

    <!-- Music Toggle -->
    <button id="music-toggle" class="fixed top-4 left-4 z-50 p-3 bg-gradient-to-r from-yellow-500 to-pink-600 text-white rounded-full shadow-lg hover:scale-110 transition-transform">
        <i class="fas fa-music"></i>
    </button>
    <audio id="background-music" loop>
        <source src="~/music/wedding.mp3" type="audio/mp3">
    </audio>

    <!-- Sidebar -->
    <aside id="sidebar" class="fixed top-0 right-0 w-64 h-full bg-gradient-to-b from-gray-800 to-pink-900 text-white p-6 transform translate-x-full transition-transform duration-300 md:translate-x-0 z-40">
        <div class="text-center">
            <img src="~/Images/Evyte.png" alt="Logo" class="w-20 sm:w-24 mx-auto mb-4 filter brightness-0 invert" />
            <h6 class="text-xl sm:text-2xl font-amiri text-yellow-300 mb-2">@Model.RequestData.BrideName & @Model.RequestData.GroomName</h6>
            <p class="text-sm text-gray-300">@Model.RequestData.EventDate.ToString("dd MMMM yyyy", culture)</p>
        </div>
        <nav class="mt-8">
            <ul class="space-y-4 text-right">
                <li><a href="#home" class="flex items-center gap-2 hover:text-yellow-300 transition p-2 rounded-lg hover:bg-pink-700"><i class="fas fa-home"></i> الرئيسية</a></li>
                <li><a href="#couple" class="flex items-center gap-2 hover:text-yellow-300 transition p-2 rounded-lg hover:bg-pink-700"><i class="fas fa-users"></i> العروسان</a></li>
                <li><a href="#countdown" class="flex items-center gap-2 hover:text-yellow-300 transition p-2 rounded-lg hover:bg-pink-700"><i class="fas fa-clock"></i> العد التنازلي</a></li>
                <li><a href="#gallery" class="flex items-center gap-2 hover:text-yellow-300 transition p-2 rounded-lg hover:bg-pink-700"><i class="fas fa-images"></i> المعرض</a></li>
                <li><a href="#event" class="flex items-center gap-2 hover:text-yellow-300 transition p-2 rounded-lg hover:bg-pink-700"><i class="fas fa-map-marker-alt"></i> الحدث</a></li>
            </ul>
        </nav>
    </aside>

    <!-- Mobile Menu Toggle -->
    <button id="menu-toggle" class="fixed top-4 right-4 md:hidden z-50 p-3 bg-gradient-to-r from-yellow-500 to-pink-600 text-white rounded-full shadow-lg hover:scale-110 transition-transform">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
    </button>

    <!-- Main Content -->
    <main class="md:mr-64">
        <!-- Hero Section -->
        <section id="home" class="hero-section h-screen flex items-center justify-center text-white text-center relative overflow-hidden">
            <div class="parallax-bg absolute inset-0 w-full h-full bg-no-repeat bg-center bg-cover z-0" style="background-image: url('@Model.RequestData.MainSliderImageUrl');"></div>
            <div class="bg-black bg-opacity-50 p-6 sm:p-8 rounded-lg z-10">
                <h1 class="text-4xl sm:text-5xl font-great-vibes font-bold mb-4 typewriter">@Model.RequestData.BrideName & @Model.RequestData.GroomName</h1>
                <p class="text-lg sm:text-xl font-amiri" data-gsap="fade-in">@Model.RequestData.EventDate.ToString("dd MMMM yyyy", culture) - @Model.RequestData.EventPlaceName</p>
                <div class="flowers absolute inset-0 pointer-events-none"></div>
            </div>
        </section>

        <!-- Couple Section -->
        <section id="couple" class="py-12 sm:py-16 bg-white relative">
            <div class="container mx-auto px-4">
                <h2 class="text-3xl sm:text-4xl font-great-vibes font-bold text-center mb-8 sm:mb-12 text-gray-800">العروسان</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 sm:gap-8">
                    <div class="text-center relative" data-gsap="pop-in">
                        <div class="heart-bg absolute inset-0 m-auto w-32 h-32 sm:w-40 sm:h-40 opacity-20"></div>
                        <img src="@Model.RequestData.BrideImageUrl" alt="Bride" class="w-24 h-24 sm:w-32 sm:h-32 rounded-full mx-auto mb-4 object-cover border-4 border-yellow-400 glowing" loading="lazy" />
                        <h3 class="text-xl sm:text-2xl font-amiri font-semibold">@Model.RequestData.BrideName</h3>
                        <p class="text-gray-600 text-sm sm:text-base">العروس</p>
                        <p class="text-gray-500 text-sm mt-2">قلبها ينبض بالحب والأمل</p>
                        <div class="flex justify-center gap-3 sm:gap-4 mt-3 sm:mt-4">
                            @if (!string.IsNullOrEmpty(Model.RequestData.BrideFacebook))
                            {
                                <a href="@Model.RequestData.BrideFacebook" class="p-2 bg-gradient-to-r from-yellow-500 to-pink-600 text-white rounded-full hover:scale-110 transition"><i class="fab fa-facebook-f"></i></a>
                            }
                            @if (!string.IsNullOrEmpty(Model.RequestData.BrideInstagram))
                            {
                                <a href="@Model.RequestData.BrideInstagram" class="p-2 bg-gradient-to-r from-yellow-500 to-pink-600 text-white rounded-full hover:scale-110 transition"><i class="fab fa-instagram"></i></a>
                            }
                        </div>
                    </div>
                    <div class="text-center relative" data-gsap="pop-in">
                        <div class="heart-bg absolute inset-0 m-auto w-32 h-32 sm:w-40 sm:h-40 opacity-20"></div>
                        <img src="@Model.RequestData.GroomImageUrl" alt="Groom" class="w-24 h-24 sm:w-32 sm:h-32 rounded-full mx-auto mb-4 object-cover border-4 border-yellow-400 glowing" loading="lazy" />
                        <h3 class="text-xl sm:text-2xl font-amiri font-semibold">@Model.RequestData.GroomName</h3>
                        <p class="text-gray-600 text-sm sm:text-base">العريس</p>
                        <p class="text-gray-500 text-sm mt-2">يعد بمستقبل مليء بالسعادة</p>
                        <div class="flex justify-center gap-3 sm:gap-4 mt-3 sm:mt-4">
                            @if (!string.IsNullOrEmpty(Model.RequestData.GroomFacebook))
                            {
                                <a href="@Model.RequestData.GroomFacebook" class="p-2 bg-gradient-to-r from-yellow-500 to-pink-600 text-white rounded-full hover:scale-110 transition"><i class="fab fa-facebook-f"></i></a>
                            }
                            @if (!string.IsNullOrEmpty(Model.RequestData.GroomX))
                            {
                                <a href="@Model.RequestData.GroomX" class="p-2 bg-gradient-to-r from-yellow-500 to-pink-600 text-white rounded-full hover:scale-110 transition"><i class="fab fa-twitter"></i></a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Countdown Section -->
        <section id="countdown" class="py-12 sm:py-16 bg-gradient-to-r from-pink-600 to-yellow-500 text-white text-center">
            <div class="container mx-auto px-4">
                <h2 class="text-3xl sm:text-4xl font-great-vibes font-bold mb-6 sm:mb-8">سنصبح عائلة بعد</h2>
                <div class="flex justify-center gap-4 sm:gap-8 flex-wrap">
                    <div class="flip-card">
                        <p id="days" class="text-4xl sm:text-5xl font-bold">0</p>
                        <p class="text-sm sm:text-base">أيام</p>
                    </div>
                    <div class="flip-card">
                        <p id="hours" class="text-4xl sm:text-5xl font-bold">0</p>
                        <p class="text-sm sm:text-base">ساعات</p>
                    </div>
                    <div class="flip-card">
                        <p id="minutes" class="text-4xl sm:text-5xl font-bold">0</p>
                        <p class="text-sm sm:text-base">دقائق</p>
                    </div>
                    <div class="flip-card">
                        <p id="seconds" class="text-4xl sm:text-5xl font-bold">0</p>
                        <p class="text-sm sm:text-base">ثوان</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Gallery Section -->
        <section id="gallery" class="py-12 sm:py-16 bg-white">
            <div class="container mx-auto px-4">
                <h2 class="text-3xl sm:text-4xl font-great-vibes font-bold text-center mb-8 sm:mb-12 text-gray-800">معرض الصور</h2>
                <div class="keen-slider">
                    @foreach (var photo in Model.GalleryPhotos)
                    {
                        <div class="keen-slider__slide">
                            <img src="@photo.PhotoUrl" alt="Gallery Image" class="w-full h-64 object-cover rounded glowing gallery-img" loading="lazy" />
                        </div>
                    }
                </div>
            </div>
        </section>
        <!-- Gallery Modal -->
        <div class="modal fixed inset-0 bg-black bg-opacity-75 flex justify-center items-center z-50 hidden">
            <div class="relative max-w-full sm:max-w-4xl w-full p-4 sm:p-0">
                <img src="" alt="Gallery Image" class="w-full rounded-lg glowing" id="modal-image" />
                <button class="modal-close absolute top-2 right-2 sm:top-4 sm:right-4 bg-gradient-to-r from-yellow-500 to-pink-600 p-2 rounded-full text-white hover:scale-110 transition">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
                <button class="modal-prev absolute left-2 sm:left-4 top-1/2 transform -translate-y-1/2 bg-gradient-to-r from-yellow-500 to-pink-600 p-2 rounded-full text-white hover:scale-110 transition">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                </button>
                <button class="modal-next absolute right-2 sm:right-4 top-1/2 transform -translate-y-1/2 bg-gradient-to-r from-yellow-500 to-pink-600 p-2 rounded-full text-white hover:scale-110 transition">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Event Section -->
        <section id="event" class="py-12 sm:py-16 bg-gradient-to-r from-pink-100 to-white">
            <div class="container mx-auto px-4">
                <h2 class="text-3xl sm:text-4xl font-great-vibes font-bold text-center mb-8 sm:mb-12 text-gray-800">تفاصيل الحدث</h2>
                <div class="text-center">
                    <div class="relative inline-block mb-6 sm:mb-8">
                        <img src="@Model.RequestData.EventPlaceImageUrl" alt="Event Place" class="w-full max-w-md mx-auto rounded-lg glowing shadow-lg" loading="lazy" />
                        <div class="absolute inset-0 border-4 border-yellow-400 rounded-lg -m-2 z-0"></div>
                    </div>
                    <h3 class="text-xl sm:text-2xl font-amiri font-semibold mb-4" data-gsap="slide-up">@Model.RequestData.EventPlaceName</h3>
                    <p class="text-gray-600 text-sm sm:text-base mb-4" data-gsap="slide-up">@Model.RequestData.EventAddress</p>
                    <p class="text-gray-600 text-sm sm:text-base mb-4" data-gsap="slide-up">@Model.RequestData.EventDate.ToString("dd MMMM yyyy", culture) من @Model.RequestData.EventTimeFrom.ToString(@"hh\:mm") م إلى @Model.RequestData.EventTimeTo.ToString(@"hh\:mm") ص</p>
                    <div class="map-container mb-6" data-gsap="slide-up">
                        <iframe src="@Model.RequestData.LocationUrl" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                    <div class="flex justify-center gap-4">
                        <a href="@Model.RequestData.LocationUrl" class="px-4 py-2 bg-gradient-to-r from-yellow-500 to-pink-600 text-white rounded-full text-sm sm:text-base hover:scale-110 transition" data-gsap="slide-up">عرض الموقع</a>
                        <a href="@Model.DomainUrl" class="px-4 py-2 bg-gradient-to-r from-yellow-500 to-pink-600 text-white rounded-full text-sm sm:text-base hover:scale-110 transition" data-gsap="slide-up">شارك الدعوة</a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer class="bg-gradient-to-r from-gray-800 to-pink-900 text-white py-10 text-center border-t-2 border-yellow-400">
            <div class="container mx-auto px-4">
                <img src="~/Images/Evyte.png" alt="Logo" class="w-24 mx-auto mb-6 filter brightness-0 invert" />
                <h3 class="text-2xl font-great-vibes font-bold mb-4 text-yellow-300">@Model.RequestData.BrideName & @Model.RequestData.GroomName</h3>
                <p class="text-sm mb-4 text-gray-300">زفافنا في @Model.RequestData.EventDate.ToString("dd MMMM yyyy", culture) - @Model.RequestData.EventAddress</p>
                <div class="flex justify-center gap-6 mb-6">
                    <a href="https://facebook.com/evyte" class="text-yellow-400 hover:text-yellow-300 transition p-2 rounded-full bg-gray-700 hover:bg-gray-600"><i class="fab fa-facebook-f text-xl"></i></a>
                    <a href="https://instagram.com/evyte" class="text-yellow-400 hover:text-yellow-300 transition p-2 rounded-full bg-gray-700 hover:bg-gray-600"><i class="fab fa-instagram text-xl"></i></a>
                    <a href="mailto:support@evyte.com" class="text-yellow-400 hover:text-yellow-300 transition p-2 rounded-full bg-gray-700 hover:bg-gray-600"><i class="fas fa-envelope text-xl"></i></a>
                </div>
                <p class="text-sm text-gray-400">© @DateTime.Now.Year إيفايت - جميع الحقوق محفوظة | <a href="https://x.ai" class="text-yellow-400 hover:text-yellow-300 underline">زوروا موقعنا</a></p>
            </div>
        </footer>
    </main>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/keen-slider@6.8.4/keen-slider.min.js"></script>
    <script>
        // Register GSAP ScrollTrigger
        gsap.registerPlugin(ScrollTrigger);

        // Loading Screen
        window.addEventListener('load', () => {
            setTimeout(() => {
                document.getElementById('loading').style.display = 'none';
            }, 1000);
        });

        // Welcome Bar
        const welcomeBar = document.getElementById('welcome-bar');
        const closeBar = document.getElementById('close-bar');
        gsap.from(welcomeBar, { y: -100, duration: 0.8, ease: 'bounce.out' });
        closeBar.addEventListener('click', () => {
            gsap.to(welcomeBar, { y: -100, duration: 0.5, onComplete: () => welcomeBar.remove() });
        });

        // Music Toggle
        const musicToggle = document.getElementById('music-toggle');
        const music = document.getElementById('background-music');
        musicToggle.addEventListener('click', () => {
            if (music.paused) {
                music.play();
                musicToggle.innerHTML = '<i class="fas fa-pause"></i>';
            } else {
                music.pause();
                musicToggle.innerHTML = '<i class="fas fa-music"></i>';
            }
        });

        // Sidebar Toggle
        const menuToggle = document.getElementById('menu-toggle');
        const sidebar = document.getElementById('sidebar');
        menuToggle.addEventListener('click', () => {
            sidebar.classList.toggle('translate-x-0');
            sidebar.classList.toggle('translate-x-full');
            const icon = menuToggle.querySelector('svg');
            icon.innerHTML = sidebar.classList.contains('translate-x-full')
                ? '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>'
                : '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>';
            if (!sidebar.classList.contains('translate-x-full')) {
                gsap.from(sidebar.querySelectorAll('a'), {
                    x: 50,
                    opacity: 0,
                    duration: 0.5,
                    stagger: 0.1,
                    ease: 'power2.out'
                });
            }
        });

        // GSAP Animations
        gsap.from('[data-gsap="fade-in"]', {
            opacity: 0,
            duration: 1,
            scrollTrigger: {
                trigger: '[data-gsap="fade-in"]',
                start: 'top 80%',
            },
        });

        gsap.from('[data-gsap="pop-in"]', {
            scale: 0,
            opacity: 0,
            duration: 0.6,
            stagger: 0.3,
            ease: 'back.out(1.7)',
            scrollTrigger: {
                trigger: '[data-gsap="pop-in"]',
                start: 'top 80%',
            },
        });

        gsap.from('[data-gsap="slide-up"]', {
            opacity: 0,
            y: 50,
            duration: 0.8,
            stagger: 0.2,
            scrollTrigger: {
                trigger: '[data-gsap="slide-up"]',
                start: 'top 80%',
            },
        });

        gsap.from('section > *', {
            opacity: 0,
            y: 50,
            duration: 0.8,
            stagger: 0.2,
            scrollTrigger: {
                trigger: 'section',
                start: 'top 80%',
            },
        });

        // Parallax Effect
        window.addEventListener('scroll', () => {
            const parallax = document.querySelector('.parallax-bg');
            const scrollPosition = window.pageYOffset;
            parallax.style.transform = `translateY(${scrollPosition * 0.3}px)`;
        });

        // Typewriter Effect for Hero Title
        const typewriterText = document.querySelector('.typewriter');
        const text = typewriterText.textContent;
        typewriterText.textContent = '';
        let i = 0;
        function type() {
            if (i < text.length) {
                typewriterText.textContent += text.charAt(i);
                i++;
                requestAnimationFrame(type);
            }
        }
        setTimeout(type, 1000);

        // Countdown Timer with Flip Effect
        const eventDate = new Date('@Model.RequestData.EventDate.ToString("yyyy-MM-dd")').getTime();
        const countdown = setInterval(() => {
            const now = new Date().getTime();
            const distance = eventDate - now;
            if (distance < 0) {
                clearInterval(countdown);
                document.getElementById('days').textContent = '0';
                document.getElementById('hours').textContent = '0';
                document.getElementById('minutes').textContent = '0';
                document.getElementById('seconds').textContent = '0';
                return;
            }
            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            const updateFlip = (element, value) => {
                if (element.textContent != value) {
                    gsap.to(element, {
                        rotationX: 90,
                        opacity: 0,
                        duration: 0.3,
                        onComplete: () => {
                            element.textContent = value;
                            gsap.fromTo(element, { rotationX: -90, opacity: 0 }, { rotationX: 0, opacity: 1, duration: 0.3 });
                        }
                    });
                }
            };

            updateFlip(document.getElementById('days'), days);
            updateFlip(document.getElementById('hours'), hours);
            updateFlip(document.getElementById('minutes'), minutes);
            updateFlip(document.getElementById('seconds'), seconds);
        }, 1000);

        // Keen Slider Initialization
        var slider = new KeenSlider({
            loop: true,
            slides: {
                perView: 1,
                spacing: 10,
            },
            breakpoints: {
                '(min-width: 640px)': {
                    slides: { perView: 2, spacing: 15 },
                },
                '(min-width: 1024px)': {
                    slides: { perView: 3, spacing: 20 },
                },
            },
        }, [
            (slider) => {
                let timeout;
                let mouseOver = false;
                function clearNextTimeout() {
                    clearTimeout(timeout);
                }
                function nextTimeout() {
                    clearTimeout(timeout);
                    if (mouseOver) return;
                    timeout = setTimeout(() => {
                        slider.next();
                    }, 3000);
                }
                slider.on("created", () => {
                    slider.container.addEventListener("mouseover", () => {
                        mouseOver = true;
                        clearNextTimeout();
                    });
                    slider.container.addEventListener("mouseout", () => {
                        mouseOver = false;
                        nextTimeout();
                    });
                    nextTimeout();
                });
                slider.on("dragStarted", clearNextTimeout);
                slider.on("animationEnded", nextTimeout);
                slider.on("updated", nextTimeout);
            },
        ]);

        // Gallery Modal
        const modal = document.querySelector('.modal');
        const modalImage = document.getElementById('modal-image');
        const images = document.querySelectorAll('.gallery-img');
        const modalClose = document.querySelector('.modal-close');
        const modalPrev = document.querySelector('.modal-prev');
        const modalNext = document.querySelector('.modal-next');
        let currentIndex = 0;

        images.forEach((img, index) => {
            img.addEventListener('click', () => {
                currentIndex = index;
                modalImage.src = img.src;
                modal.classList.remove('hidden');
                modal.classList.add('active');
                gsap.from(modalImage, { scale: 0, duration: 0.5, ease: 'elastic.out(1, 0.3)' });
            });
        });

        modalClose.addEventListener('click', () => {
            modal.classList.remove('active');
            modal.classList.add('hidden');
        });

        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                modal.classList.remove('active');
                modal.classList.add('hidden');
            }
        });

        modalPrev.addEventListener('click', (e) => {
            e.stopPropagation();
            currentIndex = currentIndex === 0 ? images.length - 1 : currentIndex - 1;
            modalImage.src = images[currentIndex].src;
            gsap.from(modalImage, { x: -50, opacity: 0, duration: 0.5 });
        });

        modalNext.addEventListener('click', (e) => {
            e.stopPropagation();
            currentIndex = currentIndex === images.length - 1 ? 0 : currentIndex + 1;
            modalImage.src = images[currentIndex].src;
            gsap.from(modalImage, { x: 50, opacity: 0, duration: 0.5 });
        });

        // Decorative Elements (Hearts and Flowers)
        const decorativeContainer = document.querySelector('.decorative-elements');
        function createDecorativeElement(type) {
            const element = document.createElement('div');
            element.className = type;
            element.style.left = Math.random() * 100 + '%';
            element.style.animationDuration = Math.random() * 3 + 4 + 's';
            element.style.animationDelay = Math.random() * 2 + 's';
            decorativeContainer.appendChild(element);
            setTimeout(() => element.remove(), 6000);
        }
        setInterval(() => {
            createDecorativeElement('heart');
            createDecorativeElement('flower');
        }, 1000);

        // Scroll Interaction for Images
        gsap.utils.toArray('img.glowing').forEach(img => {
            gsap.to(img, {
                y: -20,
                scrollTrigger: {
                    trigger: img,
                    start: 'top 80%',
                    end: 'bottom 20%',
                    scrub: true,
                },
            });
        });

        // Initialize Keen Slider after DOM is fully loaded
        document.addEventListener('DOMContentLoaded', () => {
            var slider = new KeenSlider('.keen-slider', {
                loop: true,
                slides: {
                    perView: 1,
                    spacing: 10,
                },
                breakpoints: {
                    '(min-width: 640px)': {
                        slides: { perView: 2, spacing: 15 },
                    },
                    '(min-width: 1024px)': {
                        slides: { perView: 3, spacing: 20 },
                    },
                },
            }, [
                (slider) => {
                    let timeout;
                    let mouseOver = false;
                    function clearNextTimeout() {
                        clearTimeout(timeout);
                    }
                    function nextTimeout() {
                        clearTimeout(timeout);
                        if (mouseOver) return;
                        timeout = setTimeout(() => {
                            slider.next();
                        }, 3000);
                    }
                    slider.on("created", () => {
                        slider.container.addEventListener("mouseover", () => {
                            mouseOver = true;
                            clearNextTimeout();
                        });
                        slider.container.addEventListener("mouseout", () => {
                            mouseOver = false;
                            nextTimeout();
                        });
                        nextTimeout();
                    });
                    slider.on("dragStarted", clearNextTimeout);
                    slider.on("animationEnded", nextTimeout);
                    slider.on("updated", nextTimeout);
                },
            ]);
        });
    </script>

