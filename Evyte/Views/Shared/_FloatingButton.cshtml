@model string

<style>
    .floating-button-container {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 50;
        width: 100%;
        /* max-width: 320px; */
        padding: 0 16px;
    }

    .floating-button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        background: linear-gradient(45deg, #ff3cac, #784ba0, #2b86c5);
        color: white;
        font-weight: 600;
        font-size: 18px;
        padding: 14px 24px;
        border-radius: 50px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
        text-decoration: none;
        animation: pulse 2s infinite;
    }

        .floating-button:hover {
            transform: scale(1.05);
            box-shadow: 0 12px 32px rgba(0, 0, 0, 0.3);
            background: linear-gradient(45deg, #ff3cac, #a14ba0, #3b86c5);
        }

    @@keyframes pulse {
        0%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.03);
    }

    100% {
        transform: scale(1);
    }

    }

    .popup {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: white;
        padding: 24px;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
        z-index: 100;
        width: 90%;
        max-width: 400px;
        text-align: center;
        animation: slideIn 0.5s ease;
    }

        .popup.show {
            display: block;
        }

    .popup-text {
        font-size: 20px;
        font-weight: 700;
        color: #2b86c5;
        margin-bottom: 16px;
    }

    @@keyframes slideIn {
        from

    {
        transform: translate(-50%, -60%);
        opacity: 0;
    }

    to {
        transform: translate(-50%, -50%);
        opacity: 1;
    }

    }

    .popup .floating-button {
        width: 100%;
        max-width: none;
    }

    @@media (max-width: 640px) {
        .floating-button

    {
        font-size: 16px;
        padding: 12px 20px;
    }

    .popup-text {
        font-size: 18px;
    }

    }
</style>

<div class="floating-button-container">
    <a asp-controller="Invitations"
       asp-action="Create"
       asp-route-designId="@Model"
       class="floating-button">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M15 10l4.553 2.276a1 1 0 010 1.448L15 16m-6 0l-4.553-2.276a1 1 0 010-1.448L9 10m6 0H9m6 0V5a2 2 0 00-2-2h-2a2 2 0 00-2 2v5" />
        </svg>
        <span>Make Your Invitation Now</span>
    </a>
</div>

<div class="popup" id="invitationPopup">
    <p class="popup-text" id="popupText"></p>
    <a asp-controller="Invitations"
       asp-action="Create"
       asp-route-designId="@Model"
       class="floating-button">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M15 10l4.553 2.276a1 1 0 010 1.448L15 16m-6 0l-4.553-2.276a1 1 0 010-1.448L9 10m6 0H9m6 0V5a2 2 0 00-2-2h-2a2 2 0 00-2 2v5" />
        </svg>
        <span>Make Your Invitation Now</span>
    </a>
</div>

<script>
    const messages = [
        "What are you waiting for?",
        "Seize the moment!",
        "Create your invitation now!",
        "Stand out with a unique invite!"
    ];

    const popup = document.getElementById('invitationPopup');
    const popupText = document.getElementById('popupText');

    function showPopup() {
        const randomMessage = messages[Math.floor(Math.random() * messages.length)];
        popupText.textContent = randomMessage;
        popup.classList.add('show');
        setTimeout(() => {
            popup.classList.remove('show');
        }, 5000);
    }

    setInterval(showPopup, 10000);
    showPopup();
</script>