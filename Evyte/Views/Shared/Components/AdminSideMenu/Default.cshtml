@model SideMenuVM
<aside class="main-sidebar animate__animated animate__slideInLeft">
    <section class="sidebar">
        <!-- User Panel -->
        <div class="user-panel">
            <div class="pull-right image">
                <img src="~/Images/avatar.png" class="img-circle" alt="@Model.Name" />
            </div>
            <div class="pull-left info">
                <p class="typing-effect" data-text="@Model.Name">@Model.Name</p>
                <a href="#"><i class="fas fa-circle text-success"></i> متواجد</a>
            </div>
        </div>
        <!-- Sidebar Menu -->
        <ul class="sidebar-menu">
            <li class="treeview @(Context.Request.Path.ToString().ToLower().Contains("cp") ? "active" : "")">
                <a href="/cp/Index" class="nav-link">
                    <i class="fas fa-chart-bar"></i> <span>التقارير</span>
                </a>
            </li>
            <li class="treeview @(Context.Request.Path.ToString().ToLower().Contains("orders") ? "active" : "")">
                <a href="/Requests/" class="nav-link">
                    <i class="fas fa-shopping-bag"></i> <span>كل الطلبات</span>
                </a>
            </li>
            <li class="treeview @(Context.Request.Path.ToString().ToLower().Contains("categories") ? "active" : "")">
                <a href="#" class="nav-link">
                    <i class="fas fa-layer-group"></i> <span>إدارة الأقسام</span>
                    <i class="fas fa-chevron-left pull-left"></i>
                </a>
                <ul class="treeview-menu @(Context.Request.Path.ToString().ToLower().Contains("categories/create") || Context.Request.Path.ToString().ToLower().Contains("categories/index") ? "menu-open" : "") animate__animated animate__slideInRight">
                    <li><a href="@Url.Action("Create", "Categories")"><i class="fas fa-plus-circle"></i> قسم جديد</a></li>
                    <li><a href="@Url.Action("Index", "Categories")"><i class="fas fa-list"></i> جميع الأقسام</a></li>
                </ul>
            </li>
            <li class="treeview @(Context.Request.Path.ToString().ToLower().Contains("designs") ? "active" : "")">
                <a href="#" class="nav-link">
                    <i class="fas fa-paint-brush"></i> <span>إدارة التصميمات</span>
                    <i class="fas fa-chevron-left pull-left"></i>
                </a>
                <ul class="treeview-menu @(Context.Request.Path.ToString().ToLower().Contains("designs/create") || Context.Request.Path.ToString().ToLower().Contains("designs/index") ? "menu-open" : "") animate__animated animate__slideInRight">
                    <li><a href="@Url.Action("Create", "Designs")"><i class="fas fa-plus-square"></i> تصميم جديد</a></li>
                    <li><a href="@Url.Action("Index", "Designs")"><i class="fas fa-th-list"></i> جميع التصميمات</a></li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="GI" asp-action="TermsAndConditions">
                    <i class="fas fa-file-alt me-2"></i> الشروط والأحكام
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="GI" asp-action="ContactInfo">
                    <i class="fas fa-address-book me-2"></i> بيانات التواصل
                </a>
            </li>
        </ul>
    </section>
</aside>