<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Evyte</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2/dist/tailwind.min.css" rel="stylesheet">
    <!-- AOS CSS -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
    <!-- Swiper CSS -->
    <link href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/evyte.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-gradient-to-b from-gray-50 to-gray-100">
    <!-- Preloader -->
    <div id="preloader" class="fixed inset-0 bg-white z-50 flex items-center justify-center">
        <div class="preloader-heart animate-pulse">
            <i class="fas fa-heart text-purple-600 text-4xl"></i>
        </div>
    </div>

    <header class="sticky top-0 z-40 bg-gradient-to-r from-purple-700 to-pink-600 text-white shadow-lg">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid px-4 relative">
                <div class="sparkle-effect absolute inset-0 z-0"></div>
                <a class="navbar-brand font-bold text-2xl hover:scale-105 transition-transform duration-300 z-10" asp-area="Index" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-heart mr-2 animate-pulse"></i> Evyte
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link hover:bg-purple-800 hover:scale-110 transition-all duration-300 px-3 py-2 rounded-md z-10" asp-area="Index" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link hover:bg-purple-800 hover:scale-110 transition-all duration-300 px-3 py-2 rounded-md z-10" asp-area="Privacy" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link hover:bg-purple-800 hover:scale-110 transition-all duration-300 px-3 py-2 rounded-md z-10" asp-area="Create" asp-controller="Invitations" asp-action="Create">Create Now</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="relative" style="min-height: calc(100vh - 200px);">
        <div class="confetti-background"></div>
        <div class="overlay"></div>
        <div class="content">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-gray-900 text-gray-300 py-8">
        <div class="container">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                    <h3 class="text-lg font-semibold text-white mb-4">Evyte</h3>
                    <p>Craft your dream wedding invitation with elegance and ease.</p>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-white mb-4">Quick Links</h3>
                    <ul>
                        <li><a class="hover:text-purple-400 transition-colors" asp-area="Index" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a class="hover:text-purple-400 transition-colors" asp-area="Privacy" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        <li><a class="hover:text-purple-400 transition-colors" asp-area="Create" asp-controller="Invitations" asp-action="Create">Create Now</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-white mb-4">Stay Connected</h3>
                    <div class="flex space-x-4 mb-4">
                        <a href="https://facebook.com/evyte" target="_blank" class="text-gray-300 hover:text-purple-400"><i class="fab fa-facebook-f text-2xl"></i></a>
                        <a href="https://instagram.com/evyte" target="_blank" class="text-gray-300 hover:text-purple-400"><i class="fab fa-instagram text-2xl"></i></a>
                        <a href="mailto:support@evyte.com" class="text-gray-300 hover:text-purple-400"><i class="fas fa-envelope text-2xl"></i></a>
                    </div>
                    <form class="flex">
                        <input type="email" placeholder="Subscribe to our newsletter" class="w-full p-2 rounded-l-md bg-gray-800 text-gray-300 border-none focus:ring-2 focus:ring-purple-400">
                        <button type="submit" class="bg-purple-600 text-white p-2 rounded-r-md hover:bg-purple-700"><i class="fas fa-paper-plane"></i></button>
                    </form>
                </div>
            </div>
            <p class="text-center mt-6">© 2025 Evyte. All rights reserved.</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/additional-methods.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <script src="/js/site.js" asp-append-version="true"></script>
    <script src="/js/evyte.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function() {
            AOS.init({
                duration: 800,
                easing: 'ease-out-cubic',
                once: true,
                offset: 100
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>