@model Request
@{
    Layout = null;
    var culture = new System.Globalization.CultureInfo("en-SA");
    culture.DateTimeFormat.Calendar = new System.Globalization.GregorianCalendar();
    var baseDate = DateTime.Today;
    var timeFrom = baseDate.Add(Model.RequestData.EventTimeFrom);
    var timeTo = baseDate.Add(Model.RequestData.EventTimeTo);
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="wpOceans">
    <link rel="shortcut icon" type="image/png" href="~/logo/blue.png">
    <meta name="description" content="Wedding Invitation @Model.RequestData.BrideName و& @Model.RequestData.GroomName" />
    <title>Wedding @Model.RequestData.BrideName & @Model.RequestData.GroomName</title>
    <link href="~/assets/css/themify-icons.css" rel="stylesheet">
    <link href="~/assets/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/assets/css/flaticon.css" rel="stylesheet">
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/css/animate.css" rel="stylesheet">
    <link href="~/assets/css/owl.carousel.css" rel="stylesheet">
    <link href="~/assets/css/owl.theme.css" rel="stylesheet">
    <link href="~/assets/css/slick.css" rel="stylesheet">
    <link href="~/assets/css/slick-theme.css" rel="stylesheet">
    <link href="~/assets/css/swiper.min.css" rel="stylesheet">
    <link href="~/assets/css/nice-select.css" rel="stylesheet">
    <link href="~/assets/css/owl.transitions.css" rel="stylesheet">
    <link href="~/assets/css/magnific-popup.css" rel="stylesheet">
    <link href="~/assets/css/jquery.fancybox.css" rel="stylesheet">
    <link href="~/assets/css/odometer-theme-default.css" rel="stylesheet">
    <link href="~/assets/css/jquery-ui.css" rel="stylesheet">
    <link href="~/assets/sass/style.css" rel="stylesheet">
</head>

<body>

    <!-- start page-wrapper -->
    <div class="page-wrapper">
        <!-- start preloader -->
        <div class="preloader">
            <div class="vertical-centered-box">
                <div class="content">
                    <div class="loader-circle"></div>
                    <div class="loader-line-mask">
                        <div class="loader-line"></div>
                    </div>
                    <img src="~/assets/images/preloader.gif" alt="">
                </div>
            </div>
        </div>
        <!-- end preloader -->
        <!-- start of hero -->
        <section class="static-hero">
            <div class="hero-container">
                <div class="hero-inner">
                    <div class="container-fluid">
                        <div class="row align-items-center">
                            <div class="col-xl-6 col-lg-6 col-12">
                                <div class="wpo-static-hero-inner">
                                    <div class="shape-1 wow fadeInUp" data-wow-duration="1400ms">
                                        <img src="~/assets/images/slider/shape1.svg" alt="">
                                    </div>
                                    <div class="slide-title wow fadeInUp" data-wow-duration="1500ms">
                                        <h2>@Model.RequestData.GroomName & @Model.RequestData.BrideName</h2>
                                    </div>
                                    <div data-swiper-parallax="400" class="slide-text wow fadeInUp"
                                         data-wow-duration="1600ms">
                                        <p>We Are Getting Married @Model.RequestData.EventDate.ToString("dd MMMM yyyy", culture)</p>
                                    </div>
                                    <div class="wpo-wedding-date wow fadeInUp" data-wow-duration="1700ms">
                                        <div class="clock-grids">
                                            <div id="clock" data-date="@Model.RequestData.EventDate.Add(Model.RequestData.EventTimeFrom).ToString("yyyy/MM/dd HH:mm:ss")"></div>
                                        </div>
                                    </div>
                                    <div class="shape-2 wow fadeInUp" data-wow-duration="1800ms">
                                        <img src="~/assets/images/slider/shape2.svg" alt="">
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="static-hero-right">
                <div class="static-hero-img scene" id="scene">
                    <div class="static-hero-img-inner">
                        <img src="@Model.RequestData.MainSliderImageUrl" alt="">
                    </div>
                    <div class="static-hero-shape-1 wow fadeInDown" data-wow-delay=".5s">
                        <span class="layer" data-depth="0.25">
                            <img src="~/assets/images/slider/shape3.svg" alt="">
                        </span>
                    </div>
                    <div class="static-hero-shape-2 wow fadeInDown" data-wow-delay=".5s">
                        <span class="layer" data-depth="0.45">
                            <img src="~/assets/images/slider/shape4.svg" alt="">
                        </span>
                    </div>
                    <div class="static-hero-shape-3">
                        <span class="layer" data-depth="0.65">
                            <img src="~/assets/images/slider/shape5.svg" alt="">
                        </span>
                    </div>
                    <div class="static-hero-shape-4 wow fadeInUp" data-wow-delay=".5s">
                        <img src="~/assets/images/slider/shape6.svg" alt="">
                    </div>
                </div>
                <div class="static-hero-img-bg">
                    <img src="~/templates/WeddingHome2/images/bg-shape.png" alt="">
                </div>
            </div>
            <div class="right-shape">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 650 597" fill="none">
                    <path d="M717 0C717 0 527.91 0 475.696 129.736C423.481 259.472 501.092 358.185 396.683 423.034C292.274 487.902 74.9839 485.573 26.2847 646.096C-22.3947 806.598 11.4538 863 11.4538 863L653.509 803.776L717 0Z" />
                </svg>
            </div>
        </section>
        <!-- end of hero slider -->
        <!-- start couple-section -->
        <section class="wpo-couple-section section-padding" id="couple">
            <div class="container">
                <div class="couple-area clearfix">
                    <div class="row align-items-center">
                        <div class="col col-md-12 col-12">
                            <div class="couple-item">
                                <div class="couple-img-wrap wow fadeInLeftSlow" data-wow-duration="1700ms">
                                    <div class="couple-img" style="mask-image: url(/assets/images/couple/mask-1.svg); -webkit-mask-image: url(/assets/images/couple/mask-1.svg);">
                                        <img src="@Model.RequestData.BrideImageUrl" alt="">
                                    </div>
                                    <div class="c-shape">
                                        <img src="~/assets/images/couple/image-bg.svg" alt="">
                                    </div>
                                </div>
                                <div class="couple-text wow fadeInRightSlow" data-wow-duration="1700ms">
                                    <h3>@Model.RequestData.BrideName</h3>
                                    <div class="social">
                                        <ul>
                                            @if (!string.IsNullOrEmpty(Model.RequestData.BrideFacebook))
                                            {
                                                <li><a href="@Model.RequestData.BrideFacebook"><i class="ti-facebook"></i></a></li>
                                            }
                                            @if (!string.IsNullOrEmpty(Model.RequestData.BrideX))
                                            {
                                                <li><a href="@Model.RequestData.BrideX"><i class="ti-twitter-alt"></i></a></li>
                                            }
                                            @if (!string.IsNullOrEmpty(Model.RequestData.BrideInstagram))
                                            {
                                                <li><a href="@Model.RequestData.BrideInstagram"><i class="ti-instagram"></i></a></li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col col-md-12 col-12">
                            <div class="couple-item">
                                <div class="couple-img-wrap wow fadeInRightSlow" data-wow-duration="1700ms">
                                    <div class="couple-img" style="mask-image: url(/assets/images/couple/mask-2.svg); -webkit-mask-image: url(/assets/images/couple/mask-2.svg);">
                                        <img src="@Model.RequestData.GroomImageUrl" alt="">
                                    </div>
                                    <div class="c-shape">
                                        <img src="~/assets/images/couple/image-bg.svg" alt="">
                                    </div>
                                </div>
                                <div class="couple-text wow fadeInLeftSlow" data-wow-duration="1700ms">
                                    <h3>@Model.RequestData.GroomName</h3>
                                    <div class="social">
                                        <ul>
                                            @if (!string.IsNullOrEmpty(Model.RequestData.GroomFacebook))
                                            {
                                                <li><a href="@Model.RequestData.GroomFacebook"><i class="ti-facebook"></i></a></li>
                                            }
                                            @if (!string.IsNullOrEmpty(Model.RequestData.GroomX))
                                            {
                                                <li><a href="@Model.RequestData.GroomX"><i class="ti-twitter-alt"></i></a></li>
                                            }
                                            @if (!string.IsNullOrEmpty(Model.RequestData.GroomInstagram))
                                            {
                                                <li><a href="@Model.RequestData.GroomInstagram"><i class="ti-instagram"></i></a></li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- end container -->
            <div class="shape-1">
                <svg viewBox="0 0 1920 692" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <g opacity="0.1">
                        <path class="stroke-color"
                              d="M-11 689C176.333 697 609 669.4 841 495L1111 279C1263.67 154.333 1640.6 -71.0002 1927 24.9998"
                              stroke="" stroke-width="2" />
                        <path d="M-11 689C176.333 697 609 669.4 841 495L1111 279C1263.67 154.333 1640.6 -71.0002 1927 24.9998"
                              stroke="black" stroke-opacity="0.2" stroke-width="2" />
                    </g>
                    <g opacity="0.1">
                        <path class="stroke-color"
                              d="M1927 689C1739.67 697 1307 669.4 1075 495L805 279C652.333 154.333 275.4 -71.0002 -11 24.9998"
                              stroke="" stroke-width="2" />
                        <path d="M1927 689C1739.67 697 1307 669.4 1075 495L805 279C652.333 154.333 275.4 -71.0002 -11 24.9998"
                              stroke="black" stroke-opacity="0.2" stroke-width="2" />
                    </g>
                    <path class="fill-color"
                          d="M879 397C501.4 54.5998 135 31.6665 -1 62.9998V649C579.8 636.2 827.667 475.667 879 397Z"
                          fill="" />
                    <path class="fill-color"
                          d="M1041 397C1418.6 54.5998 1785 31.6665 1921 62.9998V649C1340.2 636.2 1092.33 475.667 1041 397Z"
                          fill="" />
                </svg>
            </div>
        </section>
        <!-- end couple-section -->
        <!-- start wpo-portfolio-section -->
        <section class="wpo-portfolio-section section-padding" id="gallery">
            <h2 class="hidden">some</h2>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="portfolio-grids gallery-container clearfix portfolio-slide owl-carousel">
                            @foreach (var item in Model.GalleryPhotos)
                            {
                                <div class="grid">
                                    <div class="img-holder">
                                        <a href="@item.PhotoUrl" class="fancybox"
                                           data-fancybox-group="gall-1">
                                            <img src="@item.PhotoUrl" alt class="img img-responsive">
                                            <div class="hover-content">
                                                <i class="ti-plus"></i>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div> <!-- end container -->
        </section>
        <!-- end wpo-portfolio-section -->
        <!-- start wpo-event-section -->
        <section class="wpo-event-section section-padding" id="event">
            <div class="container">
                <div class="wpo-section-title">
                    <span>Our Wedding</span>
                    <h2>When & Where</h2>
                </div>
                <div class="wpo-event-wrap">
                    <div class="row">
                        <div class="wpo-event-item wow fadeInUp" data-wow-duration="1000ms">
                            <div class="wpo-event-img">
                                <div class="wpo-event-img-inner">
                                    <img src="@Model.RequestData.EventPlaceImageUrl" alt="">
                                </div>
                            </div>
                            <div class="wpo-event-text">
                                <div class="title">
                                    <h2>The Party</h2>
                                </div>
                                <ul>
                                    <li>
                                        @Model.RequestData.EventDate.ToString("dd MMMM yyyy", culture)
                                        <br>
                                        @timeFrom.ToString("hh:mm tt") – @timeTo.ToString("hh:mm tt")
                                    </li>
                                    <li>@Model.RequestData.EventPlaceName</li>
                                    <li>
                                        <a class="popup-gmaps"
                                           href="@Model.RequestData.LocationUrl">
                                            See
                                            Location
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div> <!-- end container -->
        </section>
        <!-- end wpo-event-section -->
        <!-- start of wpo-site-footer-section -->
        @await Component.InvokeAsync("Footer")
        <!-- end of wpo-site-footer-section -->
        <!-- color-switcher -->
        <div class="color-switcher-wrap">
            <div class="color-switcher-item">
                <div class="color-toggle-btn">
                    <i class="fa fa-cog"></i>
                </div>
                <ul id="switcher">
                    <li class="btn btn1" id="Button1"></li>
                    <li class="btn btn2" id="Button2"></li>
                    <li class="btn btn3" id="Button3"></li>
                    <li class="btn btn4" id="Button4"></li>
                    <li class="btn btn5" id="Button5"></li>
                    <li class="btn btn6" id="Button6"></li>
                    <li class="btn btn7" id="Button7"></li>
                    <li class="btn btn8" id="Button8"></li>
                    <li class="btn btn9" id="Button9"></li>
                    <li class="btn btn10" id="Button10"></li>
                    <li class="btn btn11" id="Button11"></li>
                    <li class="btn btn12" id="Button12"></li>
                    <li class="btn btn13" id="Button13"></li>
                    <li class="btn btn14" id="Button14"></li>
                    <li class="btn btn15" id="Button15"></li>
                </ul>
            </div>
        </div>

    </div>
    <!-- end of page-wrapper -->
    <!-- All JavaScript files
    ================================================== -->
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <!-- Plugins for this template -->
    <script src="~/assets/js/modernizr.custom.js"></script>
    <script src="~/assets/js/jquery-plugin-collection.js"></script>
    <script src="~/assets/js/moving-animation.js"></script>
    <script src="~/assets/js/tilt.jquery.min.js"></script>
    <!-- Custom script for this template -->
    <script src="~/assets/js/script.js"></script>
    <script>
                   /*------------------------------------------
            = DYNAMIC WEDDING COUNTDOWN (CLIENT SIDE)
        -------------------------------------------*/
        function initWeddingCountdown() {
            if ($("#clock").length) {
                var weddingDate = $("#clock").data('date');

                $('#clock').countdown(weddingDate, function(event) {
                    $(this).html(event.strftime(''
                        + '<div class="box"><div><div class="time">%D</div> <span>Days</span> </div></div>'
                        + '<div class="box"><div><div class="time">%H</div> <span>Hours</span> </div></div>'
                        + '<div class="box"><div><div class="time">%M</div> <span>Minutes</span> </div></div>'
                        + '<div class="box"><div><div class="time">%S</div> <span>Seconds</span> </div></div>'));
                }).on('finish.countdown', function() {
                    $(this).html('<div class="countdown-ended">The Wedding Has Started!</div>');
                });
            }
        }

        // استدعاء الدالة عند تحميل الصفحة
        $(document).ready(function() {
            initWeddingCountdown();
        });
    </script>
</body>

</html>
