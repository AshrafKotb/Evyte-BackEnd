@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>Evyte - تسجيل الدخول</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="description" content="صفحة تسجيل الدخول Evyte">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- CSS -->
 
    <link rel="stylesheet" href="~/css/splash-screen.css">
    <link rel="stylesheet" href="~/css/login-style.css">
</head>
<body>
    <!-- Splash Screen -->
    <div id="splash-screen" class="splash-screen">
        <div class="splash-content animate__animated animate__fadeIn">
            <img src="~/Images/Evyte.png" alt="Evyte Logo" class="splash-logo animate__animated animate__pulse animate__infinite">
            <h1 class="splash-title animate__animated animate__fadeInUp animate__delay-1s">مرحبًا بك في Evyte</h1>
            <div class="splash-loader"></div>
        </div>
    </div>

    <!-- Login Container -->
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <h1>مرحبًا بعودتك</h1>
                <p>الرجاء إدخال بيانات الدخول للوصول إلى لوحة التحكم</p>
            </div>

            <div class="login-body">
                @Html.ValidationSummary(false, "", new { @class = "validation-summary-errors" })

                <form class="login-form" asp-action="Login" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="Email">البريد الإلكتروني</label>
                        <div class="form-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <input type="email" class="form-control" id="Email" name="Email" placeholder="أدخل بريدك الإلكتروني" required>
                    </div>

                    <div class="form-group">
                        <label for="Password">كلمة المرور</label>
                        <div class="form-icon">
                            <i class="fas fa-lock"></i>
                        </div>
                        <input type="password" class="form-control" id="Password" name="Password" placeholder="أدخل كلمة المرور" required>
                        
                    </div>

                    <div class="remember-me">
                        <input type="checkbox" id="RememberMe" name="RememberMe">
                        <label for="RememberMe">تذكرني</label>
                    </div>

                    <button type="submit" class="login-btn">
                        <i class="fas fa-sign-in-alt"></i>
                        تسجيل الدخول
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        // Splash Screen Transition
        window.onload = function () {
            setTimeout(function () {
                document.getElementById('splash-screen').classList.add('hidden');
            }, 2500);
        };

    </script>
</body>
</html>