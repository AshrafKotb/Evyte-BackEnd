@model FAQVM
@{
    ViewData["Title"] = "تفاصيل السؤال";
    ViewData["Dir"] = "rtl"; // للدعم الكامل للعربية
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/FAQ-details.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
<div class="container py-5">
    <div class="FAQ-header d-flex align-items-center justify-content-center animate__animated animate__fadeInDown">
        <h1 class="text-center page-title">@ViewData["Title"]</h1>
    </div>

    <div class="FAQ-card shadow-lg animate__animated animate__fadeInUp animate__delay-1s">
        <div class="row g-0">
            <div class="col-12">
                <div class="FAQ-details">
                    <div class="d-flex justify-content-between align-items-start mb-4 animate__animated animate__fadeIn animate__delay-2s flex-wrap">
                        <div class="FAQ-title-wrapper">
                            <div class="name-container">
                                <h2 class="FAQ-name">
                                    <span class="ar-name">@Model.QuestionAr</span>
                                    <span class="en-name">@Model.QuestionEn</span>
                                </h2>
                            </div>
                        </div>
                        <div class="badge-group mt-2 mt-md-0">
                            <span class="badge @(Model.IsDeleted ? "badge-deleted" : "badge-active") animate__animated animate__pulse animate__delay-2s">
                                @(Model.IsDeleted ? "محذوف" : "متاح")
                            </span>
                            <span class="badge @(Model.HomePage ? "badge-homepage-yes" : "badge-homepage-no") animate__animated animate__pulse animate__delay-2s">
                                @(Model.HomePage ? "يظهر بالرئيسية" : "لا يظهر بالرئيسية")
                            </span>
                        </div>
                    </div>
                    <div class="FAQ-info">
                        <div class="info-item animate__animated animate__fadeInUp animate__delay-2s">
                            <i class="fas fa-sort-numeric-up-alt"></i>
                            <span class="info-label">ترتيب العرض:</span>
                            <span class="info-value">@Model.SortingNumber</span>
                        </div>
                        <div class="info-item animate__animated animate__fadeInUp animate__delay-3s">
                            <i class="fas fa-calendar-alt"></i>
                            <span class="info-label">تاريخ الإنشاء:</span>
                            <span class="info-value">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                        <div class="info-item animate__animated animate__fadeInUp animate__delay-4s">
                            <i class="fas fa-lightbulb"></i> <span class="info-label">الإجابة بالعربية:</span>
                            <div class="info-description">@Html.Raw(Model.AnswerAr)</div>
                        </div>
                        <div class="info-item animate__animated animate__fadeInUp animate__delay-5s">
                            <i class="fas fa-lightbulb"></i> <span class="info-label">الإجابة بالإنجليزية:</span>
                            <div class="info-description">@Html.Raw(Model.AnswerEn)</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="action-buttons animate__animated animate__fadeIn animate__delay-6s">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-right"></i>رجوع إلى القائمة
        </a>
    </div>
</div>